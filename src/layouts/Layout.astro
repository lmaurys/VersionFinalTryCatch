---
import '@fontsource/inter/400.css';
import '@fontsource/inter/700.css';
import '@fontsource/fira-code/400.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import 'aos/dist/aos.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="overflow-x-hidden">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Try Catch Solutions - Soluciones de Software a Medida" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="theme-color" content="#0891b2" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Try Catch Solutions</title>

    <!-- Preload critical fonts -->
    <link
      rel="preload"
      href="/fonts/inter-latin-400-normal.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/inter-latin-700-normal.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- Estilos críticos inline -->
    <style is:inline>
      /* Prevent FOUC and layout shifts */
      html {
        visibility: visible;
        opacity: 1;
        overflow-x: hidden;
      }
      
      body {
        margin: 0;
        padding: 0;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        overflow-x: hidden;
        width: 100%;
      }

      /* Asegura que el contenido no cause scroll horizontal */
      * {
        max-width: 100%;
        box-sizing: border-box;
      }

      /* Mejora la visualización inicial */
      .container {
        width: 100%;
        margin-right: auto;
        margin-left: auto;
        padding-right: 1rem;
        padding-left: 1rem;
      }

      @media (min-width: 640px) {
        .container {
          max-width: 640px;
        }
      }
      @media (min-width: 768px) {
        .container {
          max-width: 768px;
        }
      }
      @media (min-width: 1024px) {
        .container {
          max-width: 1024px;
        }
      }
      @media (min-width: 1280px) {
        .container {
          max-width: 1280px;
        }
      }
    </style>
  </head>
  <body class="bg-slate-50 overflow-x-hidden w-full">
    <Header />
    <slot />
    <Footer />
    <script>
      import AOS from 'aos';
      // Retrasa la inicialización de AOS para evitar problemas de rendimiento inicial
      window.addEventListener('load', () => {
        AOS.init({
          duration: 800,
          once: true,
          disable: 'mobile' // Deshabilita las animaciones en móviles para mejor rendimiento
        });
      });
    </script>
  </body>
</html>