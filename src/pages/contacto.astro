---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm';

const contactInfo = {
  email: "felipegranadosgiron@trycatch.com.co",
  phone: "+57 3025162433",
  location: "Colombia"
};
---

<Layout title="Contacto">
  <main class="pt-32">
    <!-- Hero Section -->
    <section class="bg-gradient-to-b from-white to-slate-50 py-20">
      <div class="container mx-auto px-4">
        <div class="text-center max-w-4xl mx-auto" data-aos="fade-up">
          <h1 class="text-5xl font-bold mb-6">
            Comencemos tu Próximo
            <span class="text-primary">Proyecto</span>
          </h1>
          <p class="text-xl text-gray-600">
            Estamos aquí para convertir tus ideas en realidad. Contáctanos y descubre cómo podemos ayudarte.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-2 gap-12">
          <!-- Contact Form -->
          <div class="bg-slate-50 p-8 rounded-xl" data-aos="fade-right">
            <h2 class="text-2xl font-bold mb-6">Envíanos un mensaje</h2>
            <ContactForm client:load />
          </div>

          <!-- Contact Information -->
          <div data-aos="fade-left">
            <div class="bg-dark text-white p-8 rounded-xl mb-8">
              <h2 class="text-2xl font-bold mb-6">Información de Contacto</h2>
              <div class="space-y-6">
                <div class="flex items-center">
                  <div class="text-primary mr-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-bold">Email</h3>
                    <p class="text-gray-400">{contactInfo.email}</p>
                  </div>
                </div>
                <div class="flex items-center">
                  <div class="text-primary mr-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-bold">Teléfono</h3>
                    <p class="text-gray-400">{contactInfo.phone}</p>
                  </div>
                </div>
                <div class="flex items-center">
                  <div class="text-primary mr-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-bold">Ubicación</h3>
                    <p class="text-gray-400">{contactInfo.location}</p>
                  </div>
                </div>
              </div>
            </div>

            <div class="bg-slate-50 p-8 rounded-xl">
              <h2 class="text-2xl font-bold mb-6">Horario de Atención</h2>
              <div class="space-y-4">
                <div class="flex justify-between">
                  <span class="text-gray-600">Lunes - Viernes</span>
                  <span class="font-bold">8:00 AM - 6:00 PM</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Sábado</span>
                  <span class="font-bold">9:00 AM - 2:00 PM</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Domingo</span>
                  <span class="font-bold text-primary">Cerrado</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>